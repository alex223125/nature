
<div data-controller="species">
  <div class="h-screen w-full flex justify-center items-center">
    <div
      id="map"
      style="width: 100%; height: 1000px;"
      data-target="species.mapArea"
      data-key="<%= ENV['MAPBOX_ACCESS_TOKEN'] %>">
      ></div>
  </div>


  <aside id="default-sidebar"
         class="fixed top-0 right-0 z-40 w-94 h-screen transition-transform -translate-x-full sm:translate-x-0"
         data-target="species.sidebar"
         style="display:none"
         aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
      <h5>Occurrences:</h5>
      <ul class="space-y-2 font-medium" data-target="species.occurrencesList">
      </ul>
    </div>
  </aside>

</div>



